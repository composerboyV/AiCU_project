generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  todos     Todo[]
  createdAt DateTime @default(now())
}

model Todo {
  id        Int         @id @default(autoincrement())
  title     String
  done      Boolean     @default(false)
  userId    Int
  user      User        @relation(fields: [userId], references: [id])
  category  TodoCategory @default(DAILY)
  dueDate   DateTime?
  createdAt DateTime    @default(now())
}

enum TodoCategory {
  DAILY
  WEEKLY
  MONTHLY
}
